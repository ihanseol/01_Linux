#!/usr/bin/env bash
#
# Usage: hr [message]
#
# Displays a big horizontal rule in the terminal with an optional header.

w="$(tput cols)"
color='30;1'
char='‚îÅ'
title="$(echo $* | tr a-z A-Z )"

echo -en "\x1b[${color}m"
if [ ${#title} -gt 0 ]; then
  n="$(expr \( $w - ${#title} - 2 \) / 2)"
  printf "${char}%.0s" $(seq 1 $n)
  echo -en " $title "
  printf "${char}%.0s" $(seq 1 $n)
else
  printf "${char}%.0s" $(seq 1 $w)
fi
echo -en "\x1b[0m\n"
